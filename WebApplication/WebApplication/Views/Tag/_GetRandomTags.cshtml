@model List<string>
@{
    List<int> rel = ViewBag.Rel;
}
<script src="~/Scripts/jquery.tagcloud.js"></script>
<div id="tagCloud">
    @for (int i = 0; i < Model.Count;i++ )
    {
        <a href="@Url.Action("ViewTaskList", "Task", new { categoryName = Model[i] })" rel="@(rel[i])">@Model[i]</a>
    }
</div>
<script>
    $(document).ready(function () {
        $.fn.tagcloud.defaults = {
            size: { start: 10, end: 32, unit: 'pt' },
            color: { start: '#43C73F', end: '#B915F2' }
        };
        $(function () {
            $('#tagCloud a').tagcloud();
        });
    });

</script>