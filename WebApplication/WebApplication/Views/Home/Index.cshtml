
@{ string Identity = ViewBag.Identity;}       


@if (User.Identity.IsAuthenticated)
{
    <div id="partialTagsCloud" class="col-md-6">
    </div>
    <div id="partialLastTask" class="col-md-6">
    </div>
    <div id="partialMaxRate" class="col-md-6">
    </div>
    
}
<script>
    $(document).ready(function () {
        $.ajax({
            url: '@Url.Action("GetRandomTags", "Tag")',
            type: "POST",
            data: "count=" + 100,
            success: function (msg) {
                $('#partialTagsCloud').append(msg);
            }
        })
        $.ajax({
            url: '@Url.Action("GetLastTask", "Task")',
            type: "POST",
            data: "count=" + 10,
            success: function (msg) {
                $('#partialLastTask').html(msg);
            }
        })
        $.ajax({
            url: '@Url.Action("GetMaxRate", "Rate")',
            type: "POST",
            success: function (msg) {
                $('#partialMaxRate').html(msg);
            }
        })
    })
    
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}