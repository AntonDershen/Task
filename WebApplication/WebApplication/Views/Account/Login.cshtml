@model WebApplication.Models.LoginModel
@{
    ViewBag.Title = GlobalRes.LogIn;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="style-content-widget-login white-bg">
        <div class="col-1">
            <div class="panel panel-default margin-10">
                <div class="panel-heading">
                    <h2 class="text-uppercase">@GlobalRes.LogInForm</h2>
                </div>
                <div class="panel-body">

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true)
                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, new {@class = "control-label col-md-2"})
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Email)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, new {@class = "control-label col-md-2"})
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Password)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value=@GlobalRes.LogIn class="btn btn-default"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
}