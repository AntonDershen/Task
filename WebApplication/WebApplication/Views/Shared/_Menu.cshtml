<div class="style-sidebar">
    <header class="style-site-header">
        <div class="square"></div>
        <h1>Course Task</h1>
    </header>

    <div class="profile-photo-container">
        <img class="img-sidebar" src="~/Media/5.jpg" /> 
        <div class="profile-photo-overlay"></div>
    </div>

    <form class="style-search-form" role="search" action="">
        <div class="input-group">
            <button type="submit" class="fa fa-search"></button>
            <input type="text" name="searchQuery" id="tags" class="form-control col-lg-8" placeholder="@GlobalRes.SearchFor">
        </div>
    </form>
    <div class="mobile-menu-icon">
        <i class="fa fa-bars"></i>
    </div>
    <nav class="style-left-nav">
        <ul>
            <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-home fa-fw"></i>@GlobalRes.Home</a></li>
            @if (Request.IsAuthenticated)
            {
                <li><a href="@Url.Action("Profile", "Account")"><i class="fa fa-male fa-fw"></i>@GlobalRes.Profile</a></li>
                <li><a href="@Url.Action("CreateTask", "Task")"><i class="fa fa-pencil fa-fw"></i>@GlobalRes.MyDocuments</a></li>
                <li><a href="@Url.Action("LogOff", "Account")"><i class="fa fa-arrow-left fa-fw"></i>@GlobalRes.LogOut</a></li>
            }
            else
            {
                <li><a href="@Url.Action("LogIn", "Account")"><i class="fa fa-arrow-right fa-fw"></i>@GlobalRes.LogIn</a></li>
                <li><a href="@Url.Action("Register", "Account")"><i class="fa fa-check-square-o fa-fw"></i>@GlobalRes.Register</a></li>
            }      
        </ul>
    </nav>
</div>